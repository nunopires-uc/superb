    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/lblSaudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Greeting"
            android:textSize="24sp" />

        <Spinner
            android:background="@drawable/gradient_cor_de_rosa"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpinSaudacoes"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:elevation="10dp"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:popupBackground="@android:drawable/dialog_holo_light_frame"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnSaudacao"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="0.1"
            android:paddingTop="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/lblQuebraGelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Icebreaker"
            android:textSize="24sp" />

        <Spinner
            android:background="@drawable/gradient_cor_de_rosa"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpinQuebraGelo"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:elevation="10dp"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:popupBackground="@android:drawable/dialog_holo_light_frame"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnQuebraGelo"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/black"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="0.1"
            android:paddingTop="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/lblCorpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Body"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnVoiceToText"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:paddingTop="0dp"
            android:text="Text-to-voice" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/txtBoxCorpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:elevation="5dp"
            android:inputType="textMultiLine"
            android:minLines="6"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginBottom="4dp"
            >

        </EditText>
    </LinearLayout>

    <Spinner
        android:background="@drawable/gradient_cor_de_rosa"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SpinCorpo"
        android:layout_weight="3"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:popupBackground="@android:drawable/dialog_holo_light_frame"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/lblVotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Vows"
            android:textSize="24sp" />

        <Spinner
            android:background="@drawable/gradient_cor_de_rosa"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpinVotos"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:elevation="10dp"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:popupBackground="@android:drawable/dialog_holo_light_frame"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnVotos"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="0.1"
            android:paddingTop="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/lblDespedida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Farewell"
            android:textSize="24sp" />

        <Spinner
            android:background="@drawable/gradient_cor_de_rosa"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SpinDespedida"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:elevation="10dp"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:popupBackground="@android:drawable/dialog_holo_light_frame"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnDespedida"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/black"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="0.1"
            android:paddingTop="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <AutoCompleteTextView
            android:id="@+id/txtBoxAssinatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Signature"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="Send" />
    </LinearLayout>


</LinearLayout>